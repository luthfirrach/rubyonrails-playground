
  <div class="row mt-3">
    <div class="col-md-3 text-center">
      <div class="row">
        <div class="col">
          <h3>Kategori</h3>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col">
          <% @cats.each do |cat| %>
            <%= link_to cat.name, category_path(cat) , {:class => 'text-white bg-warning rounded-pill d-block mb-1'} %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-9 text-center">
      <div class="row">
        <div class="col">
          <h3>Iklan</h3>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col">
          <% @ads.each do |ad| %>
            <div class="row shadow-sm rounded">
              <div class="col">
                <div class="float-left mr-2" >
                  <%= image_tag(ad.image, {:class => "rounded img-fluid" ,:style => "width: 130px; height: auto"}) %>
                </div>
                <div class="text-left">
                  <p class="font-weight-bold"><%= ad.title %></p>
                  <p class="font-weight-light text-truncate"><%= ad.description %></p>
                </div>
              </div>
              <div class="col-2 float-right align-middle">
                <%= link_to "view", ad_path(ad), {:class => 'btn btn-warning text-white'} %>
              </div>
            </div> 
            <hr>
          <% end %>
        </div>
      </div>
    </div>
  </div>

