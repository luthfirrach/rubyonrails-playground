<h1>Post your Ads!</h1>
<%= form_for :post, url: ads_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.collection_select :m_category_id, MCategory.order(:name), :id, :name %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.collection_select :d_category_id, DCategory.order(:name), :id, :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>