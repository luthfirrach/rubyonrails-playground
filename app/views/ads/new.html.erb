<h1>Post your Ads!</h1>
<%= form_for :post, url: ads_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.select(:category_id) do %>
      <% [['Lisbon', 1], ['Madrid', 2], ['Bern', 3]].each do |c| -%>
        <%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
    <% end %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>