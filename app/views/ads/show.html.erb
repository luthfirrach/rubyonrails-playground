<div class="border border-secondary mt-3">
  <div class="img-thumbnail" style="width: 10vw; height: 10vh">
    <%= @ad.title %>
  </div>
  <p><%= image_tag(@ad.image) %></p>
  <p><%= @ad.description %></p>
  <p><%= @ad.condition %> </p>
  <p><%= number_to_currency(@ad.price, unit:"Rp ") %> </p>
</div>

<div>
  <h3>Comment</h3>
  <% @ad.comments.each do |comment| %>
    <div class="well">
      <p><strong>  <%= comment.username %></strong>:<%= comment.body %> </p>
      
    </div>
  <% end %>
</div>

<%= form_for([@ad, @ad.comments.build]) do |f| %>

  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :comment %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>